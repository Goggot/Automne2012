class Ecrivain():
    def __init__(self, fichier="fichiertest.txt"):
            self.fichier=fichier
            
    def ecristotal(self,montexte):
            f=open(self.fichier,"w")
            f.write(montexte)
            f.close()
            return "Ecriture reussie"
        
                   
if __name__ == '__main__':
    obj=Ecrivain()